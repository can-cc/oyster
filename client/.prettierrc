{
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.js"],
      "options": {
        "parser": "typescript",
        "singleQuote": true,
        "printWidth": 100
      }
    },
    {
      "files": ["**/*.html"],
      "options": {
        "parser": "angular"
      }
    },
    {
      "files": "**/*.scss",
      "options": {
        "parser": "css"
      }
    },
    {
      "files": "**/*.json",
      "options": {
        "parser": "json",
        "printWidth": 120
      }
    }
  ]
}
